{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard",
    ":semanticCommits",
    ":automergeDigest",
    ":automergePatch",
    ":automergeMinor"
  ],
  "timezone": "Asia/Tokyo",
  "schedule": [
    "at any time"
  ],
  "labels": [
    "dependencies",
    "renovate"
  ],
  "commitMessagePrefix": "chore(deps):",
  "prHourlyLimit": 10,
  "prConcurrentLimit": 15,
  "minimumReleaseAge": "3 days",
  "internalChecksFilter": "strict",
  "automerge": true,
  "automergeType": "pr",
  "automergeStrategy": "squash",
  "platformAutomerge": true,
  "ignoreTests": false,
  "packageRules": [
    {
      "description": "Astro関連パッケージをグループ化",
      "groupName": "Astro packages",
      "matchPackagePatterns": [
        "^astro$",
        "^@astrojs/",
        "^astro-"
      ],
      "automerge": true,
      "schedule": [
        "before 4am on Monday"
      ]
    },
    {
      "description": "ESLint/Prettier関連をグループ化",
      "groupName": "Linting and formatting",
      "matchPackagePatterns": [
        "eslint",
        "prettier"
      ],
      "automerge": true
    },
    {
      "description": "TypeScript関連をグループ化",
      "groupName": "TypeScript",
      "matchPackagePatterns": [
        "typescript",
        "^@types/"
      ],
      "automerge": true
    },
    {
      "description": "Tailwind関連をグループ化",
      "groupName": "Tailwind CSS",
      "matchPackagePatterns": [
        "tailwind"
      ],
      "automerge": true
    },
    {
      "description": "メジャーバージョンアップは手動レビュー",
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": false,
      "minimumReleaseAge": "21 days",
      "labels": [
        "dependencies",
        "renovate",
        "major"
      ]
    },
    {
      "description": "マイナー・パッチは自動マージ",
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "squash"
    },
    {
      "description": "devDependenciesは積極的に自動マージ",
      "matchDepTypes": [
        "devDependencies"
      ],
      "automerge": true,
      "minimumReleaseAge": "7 days"
    },
    {
      "description": "セキュリティアラートは即座に自動マージ",
      "matchDatasources": [
        "npm"
      ],
      "matchUpdateTypes": [
        "patch"
      ],
      "vulnerabilityAlerts": {
        "enabled": true
      },
      "minimumReleaseAge": null,
      "automerge": true,
      "labels": [
        "security",
        "dependencies"
      ]
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": [
      "security",
      "dependencies"
    ],
    "minimumReleaseAge": null,
    "automerge": true
  }
}
