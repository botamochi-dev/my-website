---
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import Headline from '~/components/ui/Headline.astro';

const {
  title = '',
  subtitle = '',
  tagline = '',
  items = [],
  id,
  isDark = false,
  classes = {},
  bg = await Astro.slots.render('bg'),
} = Astro.props;

const levels = [
  { level: 5, label: '個人で案件を受けられるレベル' },
  { level: 4, label: '制作上で使用に困らないレベル' },
  { level: 3, label: 'そこそこの機能が作れるレベル' },
  { level: 2, label: '基礎的な理解があるレベル' },
  { level: 1, label: '使用したことはあるレベル' },
];
---

<WidgetWrapper id={id} isDark={isDark} containerClass={`max-w-7xl mx-auto ${classes?.container ?? ''}`} bg={bg}>
  <Headline title={title} subtitle={subtitle} tagline={tagline} classes={classes?.headline} />

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
    {
      items.map((category) => (
        <div class="bg-white dark:bg-slate-900 rounded-lg p-6 shadow-[0_4px_30px_rgba(0,0,0,0.1)] dark:shadow-[0_4px_30px_rgba(0,0,0,0.1)] border border-[#ffffff29] dark:border-slate-800 backdrop-blur">
          <h3 class="text-xl font-bold mb-6 text-center border-b pb-2 border-gray-100 dark:border-gray-800">
            {category.title}
          </h3>
          <div class="space-y-6">
            {category.skills.map((skill) => (
              <div class="flex items-center gap-4 group">
                <div class="flex-shrink-0 w-12 h-12 p-2 bg-gray-50 dark:bg-gray-800 rounded-xl flex items-center justify-center border border-gray-100 dark:border-gray-700 group-hover:scale-105 transition-transform duration-300">
                  {skill.icon && (
                    <img src={skill.icon} alt={skill.name} class="w-full h-full object-contain" loading="lazy" />
                  )}
                </div>
                <div class="flex-grow">
                  <div class="flex justify-between items-baseline mb-1">
                    <span class="font-bold text-gray-800 dark:text-gray-200">{skill.name}</span>
                    <span class="text-xs text-muted font-medium bg-gray-100 dark:bg-gray-800 px-2 py-0.5 rounded-full">
                      {skill.years}
                    </span>
                  </div>
                  <div class="flex gap-1.5" title={`Level ${skill.level}`}>
                    {Array.from({ length: 5 }).map((_, i) => (
                      <div
                        class={`w-6 h-2 -skew-x-12 transition-colors duration-300 ${i < skill.level ? 'bg-primary' : 'bg-gray-200 dark:bg-gray-700'}`}
                      />
                    ))}
                  </div>
                </div>
              </div>
            ))}
          </div>
        </div>
      ))
    }
  </div>

  <div
    class="mt-12 bg-white dark:bg-slate-900 rounded-lg p-6 shadow-sm border border-gray-100 dark:border-slate-800 max-w-3xl mx-auto"
  >
    <h4 class="text-lg font-bold mb-4 text-center">スキルレベルの目安</h4>
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-x-8 gap-y-3">
      {
        levels.map(({ level, label }) => (
          <div class="flex items-center gap-3">
            <div class="flex gap-1">
              {Array.from({ length: 5 }).map((_, i) => (
                <div class={`w-5 h-2 -skew-x-12 ${i < level ? 'bg-primary' : 'bg-gray-200 dark:bg-gray-700'}`} />
              ))}
            </div>
            <span class="text-sm text-gray-600 dark:text-gray-400">{label}</span>
          </div>
        ))
      }
    </div>
  </div>
</WidgetWrapper>
